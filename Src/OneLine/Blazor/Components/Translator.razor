@namespace OneLine.Blazor
@inherits TranslatorComponentModel

<select class="@CssClass" id="translator" name="translator" @onchange=@(async (v) => await OnValueChanged(v.Value.ToString())) value="@ApplicationLocale">
    @foreach (var culture in SupportedCultures.Cultures ?? Enumerable.Empty<System.Globalization.CultureInfo>())
    {
        if (culture.Name.Equals(ApplicationLocale))
        {
            <option value="@culture.Name" selected>@culture.EnglishName</option>
        }
        else
        {
            <option value="@culture.Name">@culture.EnglishName</option>
        }
    }
</select>